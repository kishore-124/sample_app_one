<h2 class="text-center text-muted mt-3">Post Lists</h2>

<div class="container mt-2">
  <table class="table  table-hover">
    <thead>
    <tr>
      <th scope="col" class="text-muted">Id</th>
      <th scope="col" class="text-muted">Title</th>
      <th scope="col" class="text-muted">Body</th>
      <th scope="col" class="text-muted">User Id</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post["id"] %></td>
        <td><%= link_to post["title"], post_path(post["id"]) %></td>
        <td><%=  link_to truncate(post["body"], length: 50), post_path(post["id"]) %></td>
        <td><%= post["userId"] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav (@pagy) %>

</div>