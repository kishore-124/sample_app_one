<h2 class="mt-2">Post Lists</h2>

<table class="table  table-hover">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Title</th>
    <th scope="col">Body</th>
    <th scope="col">User Id</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post["id"] %></td>
      <td><%= link_to post["title"], post_path(post["id"]) %></td>
      <td><%= link_to post["body"], post_path(post["id"]) %></td>
      <td><%= post["userId"] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>